<launch>
<!-- Launch file for Livox AVIA LiDAR -->

  <arg name="rviz" default="true" />
  <rosparam command="load" file="$(find std_detector)/config/config_ntu.yaml" />
  <node 
		pkg="std_detector" 
		type="place_recognition_ntu" 
		name="place_recognition_ntu" 
		output="screen" 
	/>
  <param name="lidar_path" type="string" value = "/home/database/NTU_Single_Scans/viral__2021-10-24-09-14-41/pcd"/>
  <param name="pose_path" type="string" value = "/home/database/NTU_GT_MAP/GT_poses/viral__2021-10-24-09-14-41/poses.txt"/>

  <group if="$(arg rviz)">
    <node launch-prefix="nice" pkg="rviz" type="rviz" name="rviz" args="-d $(find std_detector)/rviz_cfg/demo.rviz" />
  </group>

</launch>