<launch>
<!-- Launch file for Livox AVIA LiDAR -->

  <arg name="rviz" default="true" />
  <rosparam command="load" file="$(find std_detector)/config/config_ntu.yaml" />
  <node  pkg="std_detector" type="relocalization_ntu" name="relocalization_ntu" output="screen"/>

  <arg name="data_path" default="/media/tmn/mySataSSD2/DATASETS/MCDVIRAL/MCDPointCloud"/>
  <arg name="exp_path" default="/media/tmn/mySataSSD2/DATASETS/MCDVIRAL/Experiment/SLICT/slict_noloop/"/>

  <!-- Pose gt -->
  <param name="reference_gt_path"            type="string" value = "$(arg data_path)/ntu_day_02/pose_inW.csv"/>

  <param name="localization_lidar_path"      type="string" value = "$(arg exp_path)/result_ntu_day_02/KFCloud/"/>
  <param name="localization_pose_path"       type="string" value = "$(arg exp_path)/result_ntu_day_02/KfCloudPose.pcd"/>
  
  <param name="generate_descriptor_database" type="bool"   value = "false"/>
  <param name="generated_lidar_path"         type="string" value = "$(arg data_path)/ntu_night_04/inB/"/>
  <param name="generated_pose_path"          type="string" value = "$(arg data_path)/ntu_night_04/pose_inW.csv"/>
  <param name="descriptor_file_path"         type="string" value = "$(arg data_path)/ntu_night_04/saved_descriptors/"/>

  <group if="$(arg rviz)">
    <node launch-prefix="nice" pkg="rviz" type="rviz" name="rviz" args="-d $(find std_detector)/rviz_cfg/demo.rviz" />
  </group>

</launch>