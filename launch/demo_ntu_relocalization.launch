<launch>
<!-- Launch file for Livox AVIA LiDAR -->

  <arg name="rviz" default="true" />
  <rosparam command="load" file="$(find std_detector)/config/config_ntu.yaml" />
  <node 
		pkg="std_detector" 
		type="relocalization_ntu" 
		name="relocalization_ntu" 
		output="screen" 
	/>

  <param name="generate_lidar_path" type="string" value = "/home/samsung/NTU_carpark/ntu_night_04/inB/"/>
  <param name="generate_pose_path" type="string" value = "/home/samsung/NTU_carpark/ntu_night_04/pose_inW.csv"/>
  <param name="localization_lidar_path" type="string" value = "/home/samsung/NTU_carpark/ntu_day_02/inB/"/>
  <param name="localization_pose_path" type="string" value = "/home/samsung/NTU_carpark/ntu_day_02/pose_inW.csv"/>

  <group if="$(arg rviz)">
    <node launch-prefix="nice" pkg="rviz" type="rviz" name="rviz" args="-d $(find std_detector)/rviz_cfg/demo.rviz" />
  </group>

</launch>